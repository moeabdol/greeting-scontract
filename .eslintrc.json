{
  "parser": "babel-eslint",
  "env": {
    "node": true,
    "es6": true
  },
  "extends": ["eslint:recommended", "prettier", "plugin:prettier/recommended"],
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": ["prettier", "es6-recommended"],
  "rules": {
    "prettier/prettier": "error",
    "indent": [
      "error",
      2,
      {
        "SwitchCase": 1
      }
    ],
    "linebreak-style": ["warn", "unix"],
    "quotes": ["warn", "single"],
    "semi": ["error", "always"],
    "no-console": "error",
    "no-empty": "error",
    "no-alert": "error",
    "comma-spacing": ["warn", { "before": false, "after": true }],
    "max-lines": ["warn", 300],
    "no-var": "error",
    "object-curly-spacing": ["warn", "always"],
    "eqeqeq": ["error", "always"]
  }
}
